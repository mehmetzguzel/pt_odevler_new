import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        int toplam = 0;
        int sayi;

        Scanner scanner = new Scanner(System.in);

        while (true) {
            System.out.print("Bir sayÄ± girin: ");
            sayi = scanner.nextInt();

            if (sayi == 83) {
                break;
            }

            toplam += sayi;
        }

        System.out.println("Toplam = " + toplam);
        scanner.close();
    }
}
